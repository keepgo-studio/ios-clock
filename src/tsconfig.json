{
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": "../",
    "target": "ES6",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@process/*": ["src/process/*"],
      "@widgets/*": ["src/process/app/components/widgets/*"]
    },
    "typeRoots": [ 
      "node_modules/@types",
      "@types"
    ],
    "removeComments": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
  },

  "exclude": [
    "node_modules"
  ]
}