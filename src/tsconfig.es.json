{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
    "useDefineForClassFields": false
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "main.ts",
    "ps.ts",
    "process/**/*.preload.ts"
  ]
}